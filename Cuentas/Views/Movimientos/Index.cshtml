@model IEnumerable<Cuentas.Models.Movimiento>

@{
    ViewData["Title"] = "Index";
}

<div class="w-100 py-3" style="background-color: #2c3e50;">
    <h1 class="text-center mb-0 text-white">Listado de Movimientos</h1>
</div>

<div class="my-4"></div>

<p class="mb-5">
    <a class="btn btn-success btn-lg shadow-sm" asp-action="Create">+Nuevo Movimiento</a>
</p>

<div class="container">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card shadow-sm bg-secondary text-white h-100">
                    <div class="card-body">

                        <h5 class="card-title fw-bold mb-3">Tipo: @item.Tipo</h5>
                        <div class="mb-2 p-2 rounded bg-dark">
                            <strong>Concepto:</strong> @item.Concepto
                        </div>
                        <div class="mb-2 p-2 rounded bg-dark">
                            <strong>Monto:</strong> @item.Monto
                        </div>
                        <div class="mb-2 p-2 rounded bg-dark">
                            <strong>Fecha:</strong> @item.Fecha
                        </div>
                        <div class="mb-3 p-2 rounded bg-dark">
                            <strong>Cuenta:</strong> @item.IdCuenta
                        </div>

                        <div class="d-flex justify-content-between">
                            <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

