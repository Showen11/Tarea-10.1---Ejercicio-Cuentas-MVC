@model Cuentas.Models.Movimiento

@{
    ViewData["Title"] = "Editar Movimiento";
}


<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg bg-secondary text-white border-0">
                <div class="card-body p-4">
                    <h3 class="card-title">Editar Movimiento</h3>
                    <h4 class="card-subtitle mb-3 text-body-secondary">Cambie los datos del movimiento</h4>

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="Tipo" class="form-label"></label>
                            <input asp-for="Tipo" class="form-control" />
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Concepto" class="form-label"></label>
                            <input asp-for="Concepto" class="form-control" />
                            <span asp-validation-for="Concepto" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Monto" class="form-label"></label>
                            <input asp-for="Monto" class="form-control" />
                            <span asp-validation-for="Monto" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Fecha" class="form-label"></label>
                            <input asp-for="Fecha" class="form-control" />
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="IdCuenta" class="form-label"></label>
                            <input asp-for="IdCuenta" class="form-control" />
                            <span asp-validation-for="IdCuenta" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Guardar" class="btn btn-primary w-100">
                        </div>
                        

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a class="btn btn-danger btn-sm" asp-action="Index" class="card-link">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
