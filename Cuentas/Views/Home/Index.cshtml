@{
    ViewData["Title"] = "Index";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm bg-secondary text-white border-0 text-center">
                <div class="card-body p-5">

                    <h1 class="display-5 fw-bold mb-4">
                        Centro de Cuentas
                    </h1>

                    <p class="text-white mb-5">
                        Accede rápidamente al listado de cuentas y a los movimientos registrados.
                    </p>

                    <div class="d-grid gap-3">
                        <a class="btn btn-success btn-lg" asp-controller="Cuentas" asp-action="Index">📒 Listado de Cuentas</a>                          
                        <a class="btn btn-primary btn-lg" asp-controller="Movimientos" asp-action="Index">💳 Movimientos</a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
